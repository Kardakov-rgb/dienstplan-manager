<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.dienstplan.controller.HauptfensterController">
   <top>
      <VBox>
         <!-- Menüleiste (vereinfacht) -->
         <MenuBar fx:id="menuBar">
            <Menu text="Datei">
               <MenuItem fx:id="beendenMenuItem" onAction="#onBeenden" text="Beenden" />
            </Menu>

            <Menu text="Hilfe">
               <MenuItem fx:id="hilfeMenuItem" onAction="#onHilfe" text="Hilfe" />
               <MenuItem fx:id="ueberMenuItem" onAction="#onUeber" text="Über" />
            </Menu>
         </MenuBar>
         
         <!-- Toolbar (vereinfacht) -->
         <ToolBar fx:id="toolBar" prefHeight="50.0">
            <Button fx:id="neuePersonToolButton" onAction="#onNeuePersonHinzufuegen"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                    text="Neue Person" />

            <Button fx:id="dienstplanErstellenToolButton" onAction="#onNeuerDienstplan"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                    text="Neuer Dienstplan" />
         </ToolBar>
      </VBox>
   </top>
   
   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
         
         <!-- Dashboard Tab -->
         <Tab fx:id="dashboardTab" text="Start">
            <ScrollPane fitToWidth="true">
               <VBox alignment="CENTER" spacing="30.0">
                  <padding>
                     <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                  </padding>

                  <!-- Titel -->
                  <Label style="-fx-font-size: 24px; -fx-font-weight: bold;"
                         text="Dienstplan-Generator" />

                  <!-- Workflow-Schritte -->
                  <VBox alignment="CENTER" spacing="20.0" style="-fx-max-width: 500px;">

                     <!-- Schritt 1: Personen -->
                     <HBox alignment="CENTER_LEFT" spacing="15.0"
                           style="-fx-background-color: #f5f5f5; -fx-padding: 20px; -fx-background-radius: 8px;">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="1" />
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Personen verwalten" />
                           <Label fx:id="dashboardPersonenAnzahl" style="-fx-text-fill: #666;" text="0 Personen angelegt" />
                        </VBox>
                        <Button onAction="#onPersonenverwaltungOeffnen"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                                text="Personen" />
                     </HBox>

                     <!-- Schritt 2: Dienstplan -->
                     <HBox alignment="CENTER_LEFT" spacing="15.0"
                           style="-fx-background-color: #f5f5f5; -fx-padding: 20px; -fx-background-radius: 8px;">
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" text="2" />
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Dienstplan erstellen" />
                           <Label fx:id="dashboardDienstplaeneAnzahl" style="-fx-text-fill: #666;" text="0 Dienstplaene vorhanden" />
                        </VBox>
                        <Button onAction="#onDienstplanerstellungOeffnen"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                                text="Dienstplaene" />
                     </HBox>

                  </VBox>

                  <!-- Hinweise -->
                  <VBox fx:id="hinweiseBox" alignment="CENTER" spacing="10.0" style="-fx-max-width: 500px;">
                     <Label fx:id="hinweisLabel" style="-fx-text-fill: #666; -fx-font-size: 14px;"
                            text="Legen Sie zuerst Personen an, um einen Dienstplan zu erstellen." />
                  </VBox>

               </VBox>
            </ScrollPane>
         </Tab>
         
         <!-- Personenverwaltung Tab -->
         <Tab fx:id="personenverwaltungTab" text="Personen">
            <fx:include fx:id="personenverwaltungView" source="personenverwaltung.fxml" />
         </Tab>

         <!-- Dienstplanerstellung Tab -->
         <Tab fx:id="dienstplanerstellungTab" text="Dienstplaene">
            <fx:include fx:id="dienstplanerstellungView" source="dienstplanerstellung.fxml" />
         </Tab>

      </TabPane>
   </center>
   
   <bottom>
      <HBox fx:id="statusLeiste" alignment="CENTER_LEFT" spacing="15.0"
            style="-fx-background-color: #f0f0f0; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
         <padding>
            <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
         </padding>

         <Label fx:id="hauptStatusLabel" text="Bereit" />
      </HBox>
   </bottom>
</BorderPane>